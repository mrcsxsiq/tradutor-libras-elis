<% include header %>

<!-- HEADER AND TERMO COUNT -->
<div class="jumbotron text-center">
    <h1>ELiS Mobile</h1>
    <h2><%= translate.title %></h2>
    <h3><span class="label label-info">{{ termos.length }}</span> <%= translate.labelRegistered %></h3>
</div>

<!-- FORM TO CREATE termos -->
<div id="termo-form" class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
        <form>
            <div class="form-group">

                <!-- BIND THIS VALUE TO formData.text IN ANGULAR -->
                <input type="text" class="form-control input-lg text-center"
                    placeholder="<%= translate.formDataItemPlaceholder %>" ng-model="formData.item">
                <input type="text" class="form-control input-lg text-center"
                    placeholder="<%= translate.formDataElisPlaceholder %>" ng-model="formData.elis">
            </div>

            <!-- createTermo() WILL CREATE NEW termos -->
            <button type="submit" class="btn btn-primary btn-lg"
                ng-click="createTermo()"><%= translate.buttonSave %></button>
        </form>
    </div>
</div>

<!-- TERMO LIST -->
<br />
<center>
    <h1><%= translate.listItems %></h1>
</center>
<br />
<div class="row-fluid">
    <div class="span12">
        <div class="span7">
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th><%= translate.itemName %></th>
                    <th>Elis</th>
                    <th><%= translate.actionName %></th>
                </tr>
                <tr ng-repeat="termo in termos">
                    <td>{{termo.item}}</td>
                    <td>{{termo.elis}}</td>
                    <td width="80px">
                        <!-- <button type="button" class="btn btn-info">Editar</button> -->
                        <button type="button" class="btn btn-danger"
                            ng-click="deleteTermo(termo._id)"><%= translate.buttonRemove %></button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>


<% include footer %>